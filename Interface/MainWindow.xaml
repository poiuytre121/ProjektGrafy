<Window x:Class="Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="150" Width="300">
            <TextBlock Text="Podaj liczbę wierzchołków:" FontSize="20" Margin="5"></TextBlock>
            <TextBox x:Name="liczbaWierzcholkow" FontSize="20" Margin="5"></TextBox>
            <Button x:Name="Zatwierdz" Click="Zatwierdz_Click" Content="Zatwierdź" FontSize="20" Margin="5"></Button>
        </StackPanel>
    </Grid>
</Window>
